<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/aboutHeader"
        android:layout_width="245dp"
        android:layout_height="70dp"
        android:layout_marginTop="105dp"
        android:layout_marginBottom="577dp"
        android:text="About"
        android:textColor="#000000"
        android:textSize="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginRight="97dp"
        android:layout_marginLeft="96dp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/About"
        android:layout_width="245dp"
        android:layout_height="70dp"
        android:layout_marginTop="250dp"
        android:gravity="center_horizontal"
        android:text="TAMZ 2 Project KRA0482"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutHeader"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/swipesInfo"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="577dp"
        android:text="Swipes: \n Swipe Left - Add Item \n Swipe Right - About"
        android:textColor="#000000"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutHeader"
        android:layout_marginRight="97dp"
        android:layout_marginLeft="96dp"
        android:gravity="center_horizontal" />



</androidx.constraintlayout.widget.ConstraintLayout>