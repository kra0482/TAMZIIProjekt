<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    tools:context=".DisplayRecordActivity" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="900dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:id="@+id/RL">


        <EditText
            android:id="@+id/editTextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="82dp"
            android:textColor="@color/textColor"
            android:ems="10"
            android:inputType="text">
        </EditText>

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTextName"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="Name:"
            android:textColor="@color/textColor"
            android:textSize="25dp" />

        <Spinner
            android:id="@+id/spinnerType"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:layout_marginLeft="82dp"
            android:layout_marginTop="60dp"
            android:textColor="@color/textColor"
            android:ems="10"/>

        <TextView
            android:id="@+id/textViewType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/spinnerType"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="Type:"
            android:textColor="@color/textColor"
            android:textSize="25dp" />


        <EditText
            android:id="@+id/editTextPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="82dp"
            android:textColor="@color/textColor"
            android:ems="10"
            android:inputType="text">
        </EditText>

        <TextView
            android:id="@+id/textViewShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTextPrice"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="Price:"
            android:textColor="@color/textColor"
            android:textSize="25dp" />

        <!--<EditText
            android:id="@+id/editTextShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="82dp"
            android:ems="10"
            android:inputType="text">
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop:"
            android:id="@+id/textViewPrice"
            android:textSize="25dp"
            android:layout_alignBottom="@+id/editTextShop"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />-->


        <Button
            android:id="@+id/buttonSave"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="122dp"
            android:layout_marginTop="240dp"
            android:layout_marginEnd="122dp"
            android:onClick="saveButtonAction"
            android:text="Save" />

    </RelativeLayout>
</ScrollView>